pipeline {
    agent any

    environment {
        APP = 'WebApi ICDataPrep'
		RELEASE = '1.0.0'
		IMAGENAME = "webapi_icdataprep"
		DOCKERIMAGE = ''
    }

    stages {
        stage('Deploy') {
            steps {
                echo "Desplegando imagen ${APP} release ${RELEASE}"
				script {
					    bat "dotnet --version"
				}
			}
        }
		
		stage('Test') {
            steps {
                script {
					    bat "dotnet clean Test1"
						bat "dotnet test Test1"
				}
            }
        }

        stage('Build') {
            steps {
                sh '''
                dotnet msbuild
				'''

                archiveArtifacts('**/*.dll')

                script {
					DOCKERIMAGE = docker.build IMAGENAME + ":" + RELEASE
				}
            }
        }
    }
}